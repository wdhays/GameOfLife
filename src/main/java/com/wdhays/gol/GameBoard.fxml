<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="stackPane" id="stackPane"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="600.0" prefHeight="650.0">
    <children>
        <!--Grid-->
        <GridPane fx:id="gridPane" id="gridPane" prefWidth="600.0" prefHeight="600.0"/>
        <!--Grid Info-->
        <HBox fx:id="gridInfo" id="gridInfo" prefWidth="600.0" prefHeight="25.0" alignment="CENTER">
            <VBox alignment="CENTER" prefWidth="125">
                <HBox>
                    <Label fx:id="generationLabel" id="generationLabel" text="Generation: "/>
                    <Label fx:id="generationLabelValue" id="generationLabelValue" text="0"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" prefWidth="110">
                <HBox>
                    <Label fx:id="gameSpeedLabel" id="gameSpeedLabel" text="Speed: "/>
                    <Label fx:id="gameSpeedLabelValue" id="gameSpeedLabelValue" text="Slow"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" prefWidth="110">
                <HBox>
                    <Label fx:id="gameStateLabel" id="gameStateLabel" text="State: "/>
                    <Label fx:id="gameStateLabelValue" id="gameStateLabelValue" text="Paused"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" prefWidth="150">
                <HBox>
                    <Label fx:id="ruleSetLabel" id="ruleSetLabel" text="Rule Set: "/>
                    <Label fx:id="ruleSetLabelValue" id="ruleSetLabelValue" text="Standard"/>
                </HBox>
            </VBox>
        </HBox>
    </children>
</VBox>
